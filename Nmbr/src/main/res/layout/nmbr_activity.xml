<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <include layout="@layout/activity_main"
            android:id="@+id/timedisplay"/>


    <Button android:id="@+id/presetDownloadBtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/timedisplay"
            android:onClick="startPresetDownloads"
            android:text="Download standard images"/>

    <Button android:id="@+id/deleteDownloads"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/presetDownloadBtn"
            android:onClick="fetchNewImages"
            android:text="Fetch new images"/>

</RelativeLayout>